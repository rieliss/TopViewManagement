{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "ignoreDeprecations": "5.0",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src", "examples/demo"],
  "exclude": ["node_modules"]
}
